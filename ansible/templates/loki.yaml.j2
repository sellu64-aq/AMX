# Loki Config file

# based on https://github.com/grafana/loki/blob/master/cmd/loki/loki-docker-config.yaml

# Documentation: https://grafana.com/docs/loki/latest/configuration/

# The module to run Loki with. Supported values
# all, distributor, ingester, querier, query-frontend, table-manager.
target: all

# Enables authentication through the X-Scope-OrgID header, which must be present
# if true. If false, the OrgID will always be set to "fake".
auth_enabled: false

# Configures the server of the launched module(s).
server:
  http_listen_port: 3100
  http_server_read_timeout: 120s # allow longer time span queries
  http_server_write_timeout: 120s # allow longer time span queries
  grpc_server_max_recv_msg_size: 33554432 # 32MiB (int bytes), default 4MB
  grpc_server_max_send_msg_size: 33554432 # 32MiB (int bytes), default 4MB
  log_level: info

# Configures the ingester and how the ingester will register itself to a
# key-value store.
ingester:
  lifecycler:
    final_sleep: 0s
  chunk_idle_period: 1h       # Any chunk not receiving new logs in this time will be flushed
  max_chunk_age: 1h           # All chunks will be flushed when they hit this age
  chunk_target_size: 1048576  # Loki will attempt to build chunks up to 1MB, flushing first if chunk_idle_period or max_chunk_age is reached first
  chunk_retain_period: 30s    # Must be greater than index read cache TTL if using an index cache (Default index read cache TTL is 5m)
  max_transfer_retries: 0     # Chunk transfers disabled

schema_config:
  configs:
    - from: 2020-11-01
      store: boltdb-shipper
      object_store: filesystem
      schema: v11
      index:
        prefix: index_
        period: 24h

storage_config:
  boltdb:
    directory: /opt/airlinq/grafana/loki/index

  filesystem:
    directory: /opt/airlinq/grafana/loki/chunks

  boltdb_shipper:
    active_index_directory: /opt/airlinq/grafana/loki/boltdb-shipper-active
    cache_location: /opt/airlinq/grafana/loki/boltdb-shipper-cache
    cache_ttl: 72h         # Can be increased for faster performance over longer query periods, uses more disk space
    shared_store: filesystem

compactor:
  working_directory: /opt/airlinq/grafana/loki/boltdb-shipper-compactor
  shared_store: filesystem
  compaction_interval: 10m
  retention_enabled: true          # Enable retention
  retention_delete_delay: 10m      # Time before deleted data is actually removed
  retention_delete_worker_count: 150  # Number of workers for retention deletion
  deletion_mode: filter-and-delete
  delete_request_cancel_period: 5m

limits_config:
  retention_period: 7d          # Retention period for data (30 days)
  enforce_metric_name: false
  reject_old_samples: true
  reject_old_samples_max_age: 1d
  max_entries_limit_per_query: 100000
  #volume_enabled: true
  ingestion_rate_mb: 8           # Rate limit for ingestion (in MB)
  ingestion_burst_size_mb: 16    # Burst size for ingestion (in MB)

  per_stream_rate_limit: 5MB     # Maximum byte rate per stream
  per_stream_rate_limit_burst: 15MB  # Maximum burst bytes per stream

  max_query_length: 30d         # Maximum query length (72 hours)

  max_query_lookback: 0         # Unlimited lookback for queries

querier:
  max_concurrent: 10

frontend:
  max_outstanding_per_tenant: 20
  compress_responses: true
  log_queries_longer_than: 0

frontend_worker:
  grpc_client_config:
    max_send_msg_size: 33554432
    max_recv_msg_size: 33554432

ingester_client:
  grpc_client_config:
    max_send_msg_size: 33554432
    max_recv_msg_size: 33554432

query_scheduler:
  max_outstanding_requests_per_tenant: 2048
  grpc_client_config:
    max_send_msg_size: 33554432
    max_recv_msg_size: 33554432

query_range:
  split_queries_by_interval: 0

ruler:
  storage:
    type: local
    local:
      directory: /opt/airlinq/grafana/loki/rules # volume, directory to scan for rules
  rule_path: /opt/airlinq/grafana/loki/rules-temp # volume, store temporary rule files
  alertmanager_url: "https://alertmanager.example.com"
  enable_alertmanager_v2: true
  alertmanager_client:
    basic_auth_username: "{{ loki_alertmanager_username }}"
    basic_auth_password: "{{ loki_alertmanager_password }}"

common:
  path_prefix: /opt/airlinq/grafana/loki
  replication_factor: 1
  ring:
    instance_addr: 127.0.0.1
    kvstore:
      store: inmemory